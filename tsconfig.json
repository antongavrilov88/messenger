{
  "version": "2.4.2",
  "compileOnSave": true,
  "compilerOptions": {
      "lib": [ "es6", "DOM"],
      "target": "ES6",
      "module": "ES6",
      "moduleResolution": "node",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": false,
      "removeComments": true,
      "rootDir": "src",
      "outDir": "build"
  },
  "exclude": [
      "node_modules"
  ]
}