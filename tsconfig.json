{
  "version": "2.4.2",
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es6",
      "DOM"
    ],
    "target": "ES6",
    "module": "ES6",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "../",
    "outDir": "static/assets/js"
  },
  "include": ["src", "test"],
  "exclude": [
    "node_modules"
  ]
}